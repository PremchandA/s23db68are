extends layout

block content
 h1= title
 - let shoeid = toShow.id
 - let shoeName1 = toShow.shoeName
 - let shoePrice1 = toShow.shoePrice
 - let shoemadein1 = toShow.shoemadein

 div.row(class='mb-2')
  div.mr-1 ID is
  div #{shoeid}
 - let actionid = "/resource/shoes/" + shoeid
 form(id='shoeForm', action= actionid, method="PUT")
  div.form-group
    label.shoeAttr(for='shoeName') shoe shoeName
    input#shoeName(type='text', name='shoeName', value= shoeName1 )
  div.form-group
    label.shoeAttr(for='shoePrice') shoe shoePrice
    input#shoePrice(type='number', name='shoePrice', value= shoePrice1 )
  div.form-group
    label.shoeAttr(for='shoemadein') shoe shoemadein
    input#shoemadein(type='text', name='shoemadein', value= shoemadein1 )
  input(type="submit")

 script.
  document.forms['shoeForm'].addEventListener('submit', (event) => {
   event.preventDefault();
  // TODO do something here to show user that form is being submitted
   fetch(event.target.action, {
    method: 'PUT',
    body: new URLSearchParams(new FormData(event.target)) // event.target is the form
   }).then((resp) => {
    return resp.json(); // or resp.text() or whatever the server sends
   }).then((body) => {
    alert("Update succeded")
  // TODO handle body
   }).catch((error) => {
  // TODO handle error
    alert("Update failed " + error )
   });
  });